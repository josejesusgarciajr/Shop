@{
    ViewData["Title"] = "View all Companies!";
}

<div class="text-center">

    <h1 class="display-4">Companies</h1>

    @foreach(Company company in Model)
    {
        <a asp-controller="Home" asp-action="DisplayCompanyHomePage" asp-route-companyID="@company.ID" asp-route-search="">
            <div class="card">
                <div class="card-header">
                    @company.Name
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p>@company.MissionStatment</p>
                        <footer class="blockquote-footer">Someone famous in <cite title="Source Title">@company.Address</cite></footer>
                    </blockquote>
                </div>
            </div>
        </a>
        <br />
    }
</div>
