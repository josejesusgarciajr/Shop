
@model Product;

@{
    ViewData["Title"] = "Add Product";
}

<div class="container text-center">
    <h1 class="display-main">Add Product</h1>

    <div class="alert alert-success" role="alert">
        Once product is addded the images may take a minute to show up on the website. Just refresh the page and they should appear in a few moments!
    </div>
</div>

<div class="container">

    <form asp-controller="Admin" asp-action="AddProductToDB" EncType="multipart/form-data">

        <!-- company id -->
        <label class="lead mission-statement-label">Company: </label>
        <select class="form-select" aria-label="Default select example"
                asp-for="ReferenceID">
            @foreach (Company company in ViewBag.Companies)
            {
                if (company.ID.Equals(ViewData["companyID"]))
                {
                    <option value="@company.ID"
                            selected>
                        @company.Name
                    </option>
                }
                else
                {
                    <option value="@company.ID"
                            disabled>
                        @company.Name
                    </option>
                }
            }
        </select>

        <!-- name of product -->
        <label class="lead mission-statement-label">Name: </label>
        <input type="text" placeholder="Dancing" class="form-control"
               asp-for="Name" required />

        <!-- price of product -->
        <label class="lead mission-statement-label">Price: </label>
        <input type="number" step="0.01" placeholder="0.00" class="form-control"
               asp-for="Price" required />

        <!-- description of product -->
        <label class="lead mission-statement-label">Description: </label>
        <input type="text" placeholder="Express yourself! Feel the beat! Feel the music! Feel Alive!" class="form-control"
               asp-for="Description" required /> <br />

        <!-- discount switch -->
        <div class="form-check form-switch container">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault"
                   asp-for="DiscountBool">
            <label class="form-check-label mission-statement-label" for="flexSwitchCheckDefault">Discount Switch</label>
        </div>

        <!-- discount percentage -->
        <label class="lead mission-statement-label">Discount Percentage:</label>
        <input type="number" placeholder="0.00" step="0.01" class="form-control"
               asp-for="DiscountPercentage" /> <br />

        <!-- product thumbnail -->
        <div class="mb-3">
            <label for="formFile" class="form-label mission-statement-label">Choose Thumbnail</label>
            <input class="form-control" type="file" id="formFile"
                   asp-for="UploadThumbnail">
        </div>

        <!-- product carousl of images -->
        <div class="mb-3">
            <label for="formFileMultiple" class="form-label mission-statement-label">Select Multiple Image for Carousel</label>
            <input class="form-control" type="file" id="formFileMultiple" multiple
                   asp-for="UploadImageCarousel" required>
        </div>

        <!-- flag product -->
        <div class="form-check form-switch container">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault"
                   asp-for="Flag">
            <label class="form-check-label mission-statement-label" for="flexSwitchCheckDefault">Flag Switch</label>
        </div> <br />

        <input type="submit" class="btn btn-success" />

    </form>

</div>
