@model Company;
@{
    ViewData["Title"] = "Administer Company";
}

<div class="text-center">
    <h1 class="display-main">@Model.Name</h1>
</div>

<!-- ADD PRODUCT TO COMPANY-->
<div class="text-center">
    <a asp-controller="Admin" asp-action="AddProductView" asp-route-companyID="@Model.ID"
       class="btn btn-primary">Add Product</a>
    <br /><br />
</div>

<!-- table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Product Name</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th spope="col">Flagged</th>
            <th scope="col">Management</th>
        </tr>
    </thead>
    <tbody>

        @foreach(Product product in Model.Products)
        {
        <tr>
            <td scope="row">@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Description</td>
            @if (product.Flag == true)
            {
                <td><code>FLAGGED</code></td>
            }
            else
            {
                <td>Available</td>
            }

            <td>
                <a class="btn btn-info"
                   asp-controller="Admin" asp-action="EditProductView" asp-route-productID="@product.ID">
                    Edit
                </a>
                <a class="btn btn-danger"
                   asp-controller="Admin" asp-action="DeleteProductFromDB" asp-route-productID="@product.ID">
                    Delete
                </a>
            </td>
        </tr>
        }
        
    </tbody>
</table>