@model Company;
@{
    ViewData["Title"] = "Add Company";
}

<div class="text-center">
    <h1 class="display-main">Add Company</h1>
</div>

<div class="container">

    <form asp-controller="Admin" asp-action="AddCompanyToDB">
        <!-- Name -->
        <label class="mission-statement-label">Name:</label>
        <input type="text" class="form-control"
               asp-for="Name"/>

        <!-- Address -->
        <label class="mission-statement-label">Address:</label>
        <input type="text" class="form-control"
               asp-for="Address" />

        <!-- HrefAddress -->
        <label class="mission-statement-label">HrefAddress:</label>
        <input type="text" class="form-control"
               asp-for="HrefAddress" />

        <!-- Mission Statement -->
        <label class="mission-statement-label">Mission Statement:</label>
        <input type="text" class="form-control"
               asp-for="MissionStatment" /> <br />

        <!-- SUBMIT BUTTION -->
        <input type="submit" class="btn btn-primary"
               value="Add Company" />
    </form>

</div>
